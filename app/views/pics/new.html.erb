<div class="custom-font span6 offset3 text-center boxy"

<h2 class="cool-font-large">Upload your stuff</h2>

<br/>
	
<%= simple_form_for @pic do |f| %>
	<%= f.input :hour, label: 'Which Hour', placeholder: 'Enter the Hour'    %>
	<%= f.input :image, :as => :file %>

	<%= f.input :emotion, label: 'How did you feel?', placeholder: 'Happy, stoked, Awesome, Angry' %>
	<%= f.input :learned, label: 'What did you learn?', placeholder: 'CSS3, HTML5, Rails, Ruby, COnsole', input_html: {rows: '3'} %>

	<br/>

	<%= submit_tag 'Submit', :class =>'btn btn-primary btn-large' %>
<% end %>

</div>